{{>admin_header}}

<div class="w-100 md:w-3/5 mx-auto p-3 md:mt-32 mt-24 mb-12">
    <div class="w-100 h-64 mt-3">
        <img class="object-cover h-64 w-full" src="/static/review-images/{{review._id}}.jpg">
    </div>
    <div class="flex my-4">
        <a href="/admin/edit/{{review._id}}" class="mr-4"><button
                            class="px-5 w-full md:w-48 py-2 bg-blue-500 text-white rounded text-center">Edit</button></a>
        <a class="deleteBtn" data-id="{{review._id}}"><button
                            class="px-5 w-full md:w-48 py-2 bg-red-500 text-white rounded text-center">Delete</button></a>
    </div>
    <p class="capitalize tracking-wide text-blue-500 mt-4">{{review.catagory}}</p>
    <h1 class="text-2xl mb-2 font-bold">{{review.book_name}}</h1>
    <div class="flex mb-4">
        <small class="font-bold text-gray-600">{{review.author}}</small>
        <small class="ml-4 font-bold text-gray-600">{{review.date}}</small>
    </div>
    <div class="break-words markdown">{{{review.markdown}}}</div>
</div>