{{>admin_header}}

<section class="mt-24 p-4 px-6">
    <div class="text-center">
        <a href="/admin/add-review" class=""><button
                            class="px-5 w-full md:w-48 py-2 bg-blue-500 text-white rounded text-center">New Review + </button></a>
    </div>
    
    <div class="md:w-3/4 w-full p-4 mx-auto">
        {{#each reviews}}
        <div class="flex gap-12 m-3 bg-white p-5 justify-between">
            <div class="w-1/6 md:flex hidden">
                <img src="/static/review-images/{{this._id}}.jpg" class="object-cover">
            </div>

            <div class="my-auto w-3/6">
                <p class="font-medium font-bold capitalize tracking-wide text-blue-500">{{this.catagory}}</p>
                <a href="admin/{{this._id}}"><h2 class="text-xl font-bold mb-2">{{this.book_name}}</h2></a>
                <small class="font-bold text-gray-600">By: {{this.author}}</small>
            </div>
            <div class="my-auto ">
                <div class="grid grid-cols-1 gap-5 mx-auto">
                    <a href="/admin/edit/{{this._id}}" class=""><button
                            class="px-5 w-full md:w-48 py-2 bg-blue-500 text-white rounded text-center">Edit</button></a>
                    <a class="deleteBtn" data-id="{{this._id}}"><button
                            class="px-5 w-full md:w-48 py-2 bg-red-500 text-white rounded text-center">Delete</button></a>
                </div>
            </div>
        </div>


        {{/each}}
    </div>
</section>