{{>user_header}}

<main class="xl:px-44 md:px-44 px-4 pt-8 pb-12 bg-white">

{{#each coverReview}}
<section id="hero" class="flex flex-row space-x-6 py-6 border-b">
    
    <div class="w-[25%]">
        <img class="rounded-lg hover:scale-105 transition duration-500 w-[98%] cursor-pointer"
            src="/static/review-images/{{this._id}}.jpg" alt="book_cover" />
    </div>
    <div class="flex flex-col justify-center w-[75%]">
        <a href="/reviews/{{this._id}}">
            <h1 class="uppercase text-xl font-bold text-slate-800 cursor-pointer hover:text-slate-600">{{this.book_name}}</h1>
        </a>
        <p class="italic text-md text-gray-600">{{this.author}}</p>

        <div class="text-gray-700 mt-3 review">{{{this.markdown}}}
            
        </div>
        <a href="/reviews/{{this._id}}"><span class="text-blue-500 hover:text-blue-400">Read More</span></a>
        <p class="text-slate-600 mt-3">Reviewed by <span class="text-slate-800 font-semibold">{{this.reviewer}}</span></p>
        <!--<p class="text-gray-900 mt-3 text-xs"><span><i class="fa-solid fa-calendar-days mr-2"></i></span>{{this.date}}</p>-->
    </div>
   
</section>
 {{/each}}


{{#if reviews}}
<h2 class="text-xl font-semibold mt-8 my-4">Recently added</h2>
{{/if}}
<section class="grid lg:grid-cols-2 md:grid-cols-2 grid-cols-1  gap-4 review_main">
    {{#each reviews}}
    <article class="flex flex-row w-full space-x-3 reviews border-b py-3">
        <div class="xl:w-2/5 md:w-2/5 w-1/5">
            <img class="rounded-lg border hover:scale-110 transition duration-500 w-[98%]  cursor-pointer"
                src="/static/review-images/{{this._id}}.jpg" alt="book_cover" />
        </div>
        <div class="flex flex-col justify-start xl:w-3/5 md:w-3/5 w-4/5 relative">
            <h1 class="capitalize text-md font-bold text-slate-800 cursor-pointer hover:text-slate-600">
                <a href="/reviews/{{this._id}}">{{this.book_name}}</a>
            </h1>
            <p class="italic text-md text-gray-600">{{this.author}}</p>
            
            <div class="break-words text-sm text-gray-700 mt-3 review">{{{this.markdown}}}</div>
            <a href="/reviews/{{this._id}}"><p class="text-blue-500 text-sm hover:text-blue-400">Read More</p></a>
            <p class="text-slate-600 mt-3 text-sm">Reviewed by <span class="text-slate-800 font-semibold">{{this.reviewer}}</span></p>
            <!--<p class="text-gray-900 mt-1 font-semibold text-[0.85rem]"><span><i class="fa-solid fa-calendar-days mr-1"></i></span>{{this.date}}-->
            </p>
        </div>
    </article>
    {{/each}}
</section>




</main>

<div class="w-full h-screen from-orange-500 to-blue-500 bg-gradient-to-r hidden fixed top-0 z-50 transition-all duration-1000 ease-linear" id="launch_page">
    <div class="w-3/4 h-5/6 mx-auto mt-16 bg rounded-3xl overflow-hidden shadow-xl bg-cover bg-center" >
        <div class="h-full p-4">
            <h1 class="text-3xl text-center font-extrabold text-gray-200" style="font-family: 'Cairo';">بسم الله الرحمن الرحيم</h1>
            <div class="bg-gray-50 py-5 shadow-lg mt-8 rounded-full w-fit px-20 mx-auto">
                <img src="/static/images/logo.png" class="w-32 h-32 mx-auto" />
                <h2 class="text-teal-900 font-bold mt-2 ml-2 text-3xl text-center">Al Hamra</h2>
            </div>
            <div class="w-2/12 flex items-center mx-auto cursor-pointer rounded-full pl-6 bg-white  mt-12" id="launch_button">
                    <span class="text-blue-500 font-bold">Launch</span>
                    <i class="fa-solid fa-rocket  rounded-full p-2 text-4xl text-blue-500 cursor-pointer border-8 border-transparent transition-all hover:border-6  hover:shadow-neutral-100 hover:drop-shadow-2xl"></i>
            </div>
        </div>
    </div>
</div>